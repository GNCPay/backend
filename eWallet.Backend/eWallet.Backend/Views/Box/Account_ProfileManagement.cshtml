        $('#SEARCH').click(function () {
            //alert('Clicked');
            $Username = $('#Username').val();
            var page;

            $.ajax({
                url: '@Url.Action("UserNameResult", "Account")',
                contentType: 'application/json; charset=utf-8',
                type: 'GET',
