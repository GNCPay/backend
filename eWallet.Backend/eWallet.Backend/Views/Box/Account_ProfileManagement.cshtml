@{
    Layout = null;
}
<h3>User Management</h3>
<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>#</th>
            <th>User Name</th>
            <th>Roles</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (dynamic chn in ViewBag.list_users)
        {
            <tr>
                <td>@chn._id</td>
                <td>@chn.UserName</td>
                <td>
                    @foreach(string role in chn.Roles)
                    { 
                      <strong>@role </strong>
                    }
                </td>
                <td>@chn.status</td>
                <td>
                    <a title="Cập nhật" href="#"><i class="glyphicon glyphicon-edit"> </i></a>
                    <a title="Xóa" href="#"><i class="glyphicon glyphicon-remove"> </i></a>
                </td>
            </tr>
        }
    </tbody>
</table>